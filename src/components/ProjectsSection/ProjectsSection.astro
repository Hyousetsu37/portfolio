---
import ProjectsGrid from './ProjectsGrid.astro'
import Stack from './Stack.astro'
---

<section id="projects">
	<h2>Projects</h2>
	<ProjectsGrid />
</section>

<style>
	#projects {
		padding-top: 45px;
		grid-column: 1/-1;
		padding-inline: 48px;
		/*TODO delete this */
		height: 100vh;
	}

	h2 {
		font-size: 3rem;
		font-family: 'EB Garamond', serif;
		font-weight: 800;
		text-align: center;
		color: aliceblue;
	}

	html.light #projects {
		& h2 {
			color: var(--dark-text);
		}
	}
</style>
