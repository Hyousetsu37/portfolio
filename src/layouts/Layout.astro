---
interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Inter:wght@100..900&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--fountain-blue-50: #f1fafa;
		--fountain-blue-100: #dbf0f2;
		--fountain-blue-200: #bce1e5;
		--fountain-blue-300: #8ecbd2;
		--fountain-blue-400: #55abb7;
		--fountain-blue-500: #3c909e;
		--fountain-blue-600: #357785;
		--fountain-blue-700: #30616e;
		--fountain-blue-800: #2e515c;
		--fountain-blue-900: #2a454f;
		--fountain-blue-950: #182c34;

		--fuchsia-pink-50: #fdf6fd;
		--fuchsia-pink-100: #f8edfa;
		--fuchsia-pink-200: #f1daf4;
		--fuchsia-pink-300: #e8bceb;
		--fuchsia-pink-400: #db94de;
		--fuchsia-pink-500: #c76acb;
		--fuchsia-pink-600: #b557b7;
		--fuchsia-pink-700: #903b90;
		--fuchsia-pink-800: #763275;
		--fuchsia-pink-900: #622d60;
		--fuchsia-pink-950: #3e143c;

		--clairvoyant-50: #fbf5fe;
		--clairvoyant-100: #f5e9fe;
		--clairvoyant-200: #ebd3fb;
		--clairvoyant-300: #dfb0f7;
		--clairvoyant-400: #cc81f1;
		--clairvoyant-500: #b450e5;
		--clairvoyant-600: #9b30c9;
		--clairvoyant-700: #8225a6;
		--clairvoyant-800: #6c2088;
		--clairvoyant-900: #5b1f70;
		--clairvoyant-950: #440a57;

		font-family: 'Inter', sans-serif;
		font-optical-sizing: auto;
		font-style: normal;
		font-variation-settings: 'slnt' 0;

		--stack-background: #3d3c38;
		--dark-background: #0b1215;
		--dark-border: rgb(20, 21, 32);
		--dark-middle-border: #1f2223;
		--dark-text: #1e1621;
		--light-background: #fff5ea;
		--light-border: #ede5dd;
		--light-text: #f7ebde;
		margin: 0;
		padding: 0;
	}
	body {
		background: var(--dark-background);
		height: 150vh;
		margin: 0;
		padding: 0;
		display: grid;
		grid-template-columns: repeat(6, 1fr);
		box-sizing: border-box;
		transition: all 500ms;

		&::-webkit-scrollbar {
			display: none;
		}
	}
	html.light body {
		background-color: var(--light-background);
		transition: all 500ms;
	}
	html {
		scroll-behavior: smooth;
	}
</style>
